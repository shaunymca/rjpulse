<h4 class="dotted">Listing answers</h4>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Question</th>
      <th>Value s</th>
      <th>Value t</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.user_id %></td>
        <td><%= answer.question_id %></td>
        <td><%= answer.answer_option_id %></td>
        <td><%= answer.value_t %></td>
        <td><%= link_to 'Show', answer %></td>
        <td><%= link_to 'Edit', edit_answer_path(answer) %></td>
        <td><%= link_to 'Destroy', answer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

